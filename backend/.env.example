# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=crowdfunding_app
DB_USER=crowdfunding
DB_PASSWORD=crowdfunding_pass
DB_HOST=localhost
DB_PORT=5437

# =============================================================================
# IPFS Configuration
# =============================================================================
# IPFS gateway URL for fetching campaign metadata
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
# Alternative gateways:
# IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
# IPFS_GATEWAY_URL=https://nftstorage.link/ipfs/
# IPFS_GATEWAY_URL=https://cloudflare-ipfs.com/ipfs/

# Timeout for IPFS requests (seconds)
IPFS_FETCH_TIMEOUT=30

# How long to cache metadata before refreshing (hours)
METADATA_CACHE_DURATION_HOURS=24

# =============================================================================
# JWT Authentication
# =============================================================================
# Access token lifetime in minutes (default: 60)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60

# Refresh token lifetime in days (default: 7)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# Rate Limiting
# =============================================================================
# Rate limit for anonymous users (default: 100/minute)
RATE_LIMIT_ANON=100/minute

# Rate limit for authenticated users (default: 1000/minute)
RATE_LIMIT_USER=1000/minute
