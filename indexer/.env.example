# ===========================================
# INDEXER ENVIRONMENT VARIABLES
# Copy this file to .env and fill in values
# ===========================================

# Blockchain Settings
FACTORY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
RPC_URL=http://127.0.0.1:8545
CHAIN_ID=31337

# Database Settings (matches stuff-crowd-funding/docker-compose.yaml)
DB_URL=postgresql://crowdfunding:crowdfunding_pass@localhost:5437/crowdfunding_app

# Indexer Settings
CONFIRMATIONS=1
BLOCK_BATCH_SIZE=2000
POLL_INTERVAL_SECONDS=2
REORG_ROLLBACK_BLOCKS=50
LOG_LEVEL=INFO

# RabbitMQ Settings (matches stuff-crowd-funding/docker-compose.yaml)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=blockchain_events
RABBITMQ_PREFETCH_COUNT=10

# Consumer Settings
CONSUMER_WORKERS=4
MAX_RETRIES=3

# Reconciliation Settings
RECONCILIATION_INTERVAL_SECONDS=300
